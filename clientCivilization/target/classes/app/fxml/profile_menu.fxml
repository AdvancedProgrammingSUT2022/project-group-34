<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:id="pane"
            fx:controller="app.views.graphicalMenu.ProfileMenuController"
            prefHeight="720.0" prefWidth="1280.0"
            stylesheets="@../css/profile_menu.css">

    <center>
        <VBox fx:id="mainBox" alignment="CENTER">
            <ImageView/>
            <Label/>
            <HBox>
                <Label styleClass="title" text="To change your profile picture"/>
                <VBox styleClass="lowSpacing">
                    <HBox styleClass="lowSpacing">
                        <Label text="either "/>
                        <Button fx:id="chooserButton" id="choose" styleClass="chooser" text="pick a file..." onMouseClicked="#openFileChooser"/>
                    </HBox>
                    <HBox styleClass="lowSpacing">
                        <Label text="or select one of these: "/>
                        <HBox fx:id="placeholderBox" id="placeholderBox"/>
                    </HBox>
                    <HBox styleClass="lowSpacing">
                        <Label text="or"/>
                        <Button fx:id="remover" id="chosen" styleClass="chooser" text="remove picture" onMouseClicked="#removeAvatar"/>
                    </HBox>
                </VBox>
            </HBox>
            <Label fx:id="message"/>
            <HBox styleClass="lowSpacing">
                <Label text="Old Password: "/>
                <PasswordField promptText="Old Password" fx:id="oldPasswordField"/>
            </HBox>
            <HBox styleClass="lowSpacing">
                <Label text="New Password: "/>
                <PasswordField promptText="New Password" fx:id="newPasswordField"/>
            </HBox>
            <HBox styleClass="lowSpacing">
                <Label text="New nickname: "/>
                <TextField promptText="New Nickname" fx:id="newNicknameField"/>
            </HBox>
            <HBox>
                <Button text="Change Password" onMouseClicked="#changePassword"/>
                <Button text="Change Nickname" onMouseClicked="#changeNickname"/>
                <Button text="Back to Main Manu" onMouseClicked="#exit" id="exit"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
