<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:id="pane"
            fx:controller="app.views.LoginMenuController"
            prefHeight="720" prefWidth="1280"
            stylesheets="@../css/login_menu.css">
    <top>
        <ImageView BorderPane.alignment="TOP_CENTER" scaleX="0.5" scaleY="0.5">
            <Image url="@../logo.png"/>
        </ImageView>
    </top>
    <right>
        <VBox alignment="CENTER">
            <Label fx:id="registerMessage"/>
            <Label text="Username:"/>
            <TextField fx:id="registerUsername" promptText="username" onKeyTyped="#clearMessage"/>
            <Label text="Nickname:"/>
            <TextField fx:id="nickname" promptText="nickname" onKeyTyped="#clearMessage"/>
            <Label text="Password:"/>
            <PasswordField fx:id="registerPassword" promptText="password" onKeyTyped="#clearMessage"/>
            <HBox alignment="CENTER_LEFT" spacing="5">
                <Label text="Profile Picture:"/>
                <Button fx:id="chooserButton" id="choose" styleClass="chooser" text="Pick a file..." onMouseClicked="#openFileChooser"/>
            </HBox>
            <Button text="Register" onMouseClicked="#register"/>
        </VBox>
    </right>
    <left>
        <VBox alignment="CENTER">
            <Label fx:id="loginMessage"/>
            <Label text="Username:"/>
            <TextField fx:id="loginUsername" promptText="username" onKeyTyped="#clearMessage"/>
            <Label text="Password:"/>
            <PasswordField fx:id="loginPassword" promptText="password" onKeyTyped="#clearMessage"/>
            <Button text="login" onMouseClicked="#login"/>
        </VBox>
    </left>
    <bottom>
        <Button BorderPane.alignment="CENTER" text="Exit" id="exit" onMouseClicked="#exit"/>
    </bottom>

</BorderPane>
