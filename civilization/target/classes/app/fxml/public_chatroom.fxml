<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="app.views.PublicChatroomController"
            stylesheets="@../css/chatroom.css">
    <center>
        <ScrollPane>
            <VBox fx:id="messagesList"/>
        </ScrollPane>
    </center>
    <bottom>
        <VBox>
            <TextField fx:id="messageTextField" promptText="Write a message..." onKeyPressed="#sendMessage"/>
            <HBox>
                <Button fx:id="globalChatButton" text="Global"/>
                <Button text="Private" onMouseClicked="#goToPrivateChat"/>
                <Button text="Groups" onMouseClicked="#goToGroupChat"/>
                <Button id="backButton" text="Back" onMouseClicked="#backToMainMenu"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
